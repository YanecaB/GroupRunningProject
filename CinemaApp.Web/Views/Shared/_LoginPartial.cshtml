@using Microsoft.AspNetCore.Identity
@using CinemaApp.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="Identity" asp-controller="Account" asp-action="Details" asp-route-id="@UserManager.GetUserId(User).ToString()" type="submit" class="nav-link btn btn-link text-dark border-0">
                <img src="@UserManager.Users.FirstOrDefault(u => u.Id.ToString() == UserManager.GetUserId(User)).ProfilePicturePath"
                     alt="Profile Picture" style="width: 30px; height: 30px; border-radius: 50%; object-fit: cover; border: 0.5px solid #ddd;" /> Profile
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
        }
        else
        {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>