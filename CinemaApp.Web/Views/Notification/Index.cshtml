@using CinemaApp.Web.ViewModels.Notification;
@model IEnumerable<NotificationViewModel>

@{
    ViewData["Title"] = "Notifications";
    ViewData["Message"] = "Your upcoming event reminders!";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #a1c4fd, #c2e9fb);
            color: #333;
            text-align: center;
        }

        .container {
            padding: 50px 20px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        h3 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #27ae60;
        }

        .notification {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f1f1f1;
            border-radius: 5px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            text-align: left;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .notification:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
                background-color: #e0e0e0; /* Optional: change background color on hover */
            }

            .notification h4 {
                margin: 0 0 10px;
                font-size: 1.2rem;
                color: #2c3e50;
            }

            .notification p {
                margin: 0;
                font-size: 1rem;
                color: #555;
            }

        .notification-date {
            font-size: 0.9rem;
            color: #888;
            text-align: right;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>@ViewData["Title"]</h2>
        <h3>@ViewData["Message"]</h3>

        @foreach (var notification in Model)
        {
            <a href="@Url.Action("Details", "Event", new { id = notification.EventId })"
               class="btn text-white">
                <div class="notification">
                    <h4>Event: @notification.EventName</h4>
                    <p>@notification.Message</p>
                    <div class="notification-date">@notification.Date</div>
                </div>
            </a>
        }
    </div>
</body>
</html>
