@using CinemaApp.Web.ViewModels.Schedule
@model MyScheduleIndexViewModel

@{
    ViewData["Title"] = "My Schedule";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #a1c4fd, #c2e9fb);
            color: #333;
        }

        .container {
            padding: 30px 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 1100px;
            margin: 40px auto;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .date-input {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
        }

        input[type="month"] {
            padding: 8px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 200px;
        }

        .table-container {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .card {
            border: none;
            border-radius: 10px;
            flex: 1;
            min-width: 300px;
            background-color: #ffffff;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #3498db;
            color: #fff;
            padding: 10px 15px;
            font-size: 1.25rem;
            font-weight: bold;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 15px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

        .btn {
            padding: 5px 10px;
            font-size: 0.9rem;
            border-radius: 5px;
            text-decoration: none;
            color: #fff;
            margin-right: 5px;
            display: inline-block;
        }

        .btn-details {
            background-color: #3498db;
        }

            .btn-details:hover {
                background-color: #2980b9;
            }

        .btn-change {
            background-color: #f39c12;
        }

            .btn-change:hover {
                background-color: #e67e22;
            }

        .btn-delete {
            background-color: #e74c3c;
        }

            .btn-delete:hover {
                background-color: #c0392b;
            }

        .btn-remove {
            background-color: #e74c3c;
        }

            .btn-remove:hover {
                background-color: #c0392b;
            }

        .no-data {
            text-align: center;
            font-style: italic;
            color: #888;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="date-input">
            <input type="month" id="monthInput" name="monthInput" />
        </div>

        <div class="table-container">
            <!-- My Events -->
            <div class="card">
                <div class="card-header">My Events</div>
                <div class="card-body">
                    @if (Model.MyEvents.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var myEvent in Model.MyEvents)
                                {
                                    <tr>
                                        <td>@myEvent.Title</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Event", new { id = myEvent.Id })" class="btn btn-details">Details</a>
                                            <a href="@Url.Action("Edit", "Event", new { id = myEvent.Id })" class="btn btn-change">Change</a>
                                            <a href="@Url.Action("Delete", "Event", new { id = myEvent.Id })" class="btn btn-delete">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="no-data">No events found.</p>
                    }
                </div>
            </div>

            <!-- Joined Events -->
            <div class="card">
                <div class="card-header">Joined Events</div>
                <div class="card-body">
                    @if (Model.JoinedEvents.Any())
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var joinedEvent in Model.JoinedEvents)
                                {
                                    <tr>
                                        <td>@joinedEvent.Title</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Event", new { id = joinedEvent.Id })" class="btn btn-details">Details</a>
                                            <form asp-action="Remove" asp-controller="Event" method="post" style="display: inline;">
                                                <input type="hidden" name="eventId" value="@joinedEvent.Id" />
                                                <button type="submit" class="btn btn-remove">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="no-data">No joined events found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
