@using CinemaApp.Web.ViewModels.Event
@model IEnumerable<EventIndexViewModel>

@{
    ViewData["Title"] = "My Events";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #a1c4fd, #c2e9fb);
            color: #333;
        }

        .container {
            padding: 50px 20px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 1100px;
            margin: auto;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }

            .btn-primary:hover {
                background-color: #2980b9;
                border-color: #2980b9;
            }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            background-color: #3498db;
            color: white;
        }

        .table {
            margin-bottom: 0;
        }

        .alert {
            background-color: #eafaf1;
            border-left: 5px solid #27ae60;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- List of Events -->
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title mb-0">@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Title</th>
                                            <th>Group Name</th>
                                            <th>Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var eventItem in Model)
                                        {
                                            <tr>
                                                <td>@eventItem.Title</td>
                                                <td>@eventItem.GroupName</td>
                                                <td>@eventItem.Date</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="@Url.Action("Details", "Event", new { id = eventItem.Id })"
                                                           class="btn btn-sm btn-info text-white">Details</a>
                                                        <a href="@Url.Action("Edit", "Event", new { id = eventItem.Id })"
                                                           class="btn btn-sm btn-warning text-white">Change</a>                                                        
                                                        <a href="@Url.Action("Delete", "Event", new { id = eventItem.Id })"
                                                           class="btn btn-sm btn-danger">Delete</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                <p class="mb-0">No events available. Stay tuned for updates!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
