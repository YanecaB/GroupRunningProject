@using CinemaApp.Web.ViewModels.Event
@model IEnumerable<EventIndexViewModel>

@{
    ViewData["Title"] = "Events";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #cfd9df, #e2ebf0);
            color: #333;
            text-align: center;
        }

        .container {
            padding: 50px 20px;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 1000px;
            margin: auto;
        }

        .card {
            margin: 20px 0;
            border: none;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background: #4facfe;
            background: linear-gradient(to right, #43cea2, #185a9d);
            color: #fff;
            padding: 15px;
            text-align: left;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            width: 100%;
            margin: auto;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 10px;
                text-align: left;
            }

            .table th {
                background-color: #f1f1f1;
                font-weight: bold;
            }

        .table-hover tbody tr:hover {
            background-color: #f9f9f9;
        }

        .btn {
            padding: 5px 10px;
            font-size: 0.9rem;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-info {
            background-color: #3498db;
            color: #fff;
        }

            .btn-info:hover {
                background-color: #2980b9;
            }

        .btn-success {
            background-color: #27ae60;
            color: white;
        }

            .btn-success:hover {
                background-color: #229954;
            }

        .alert {
            padding: 15px;
            background-color: #e3f2fd;
            border-left: 5px solid #2196f3;
            text-align: left;
            font-style: italic;
        }

        .btn-remove {
            background-color: #e74c3c;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.9rem;
            text-decoration: none;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Group Name</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eventItem in Model)
                                {
                                    <tr>
                                        <td>@eventItem.Title</td>
                                        <td>@eventItem.GroupName</td>
                                        <td>@eventItem.Date</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Event", new { id = eventItem.Id })" class="btn btn-info">Details</a>
                                             
                                            @if (eventItem.IsJoined)
                                            {
                                                <form asp-action="Unjoin" asp-controller="Event" method="post" style="display:inline;">
                                                    <input type="hidden" name="eventId" value="@eventItem.Id" />                                                   
                                                    <button type="submit" class="btn btn-remove">Unjoin</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="Join" asp-route-id="@eventItem.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-success">Join</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert">
                        <p>No events available. Create a new event to get started.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
