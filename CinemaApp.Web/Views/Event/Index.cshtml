@using CinemaApp.Web.ViewModels.Event
@model IEnumerable<EventIndexViewModel>

@{
    ViewData["Title"] = "Events";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- List of Events -->
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white">
                    <h3 class="card-title mb-0 text-center">Upcoming Events</h3>
                </div>
                <div class="card-body p-4">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark text-center">
                                    <tr>
                                        <th class="col-4">Title</th>
                                        <th class="col-3">Group Name</th>
                                        <th class="col-2">Date</th>
                                        <th class="col-3">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var eventItem in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@eventItem.Title</td>
                                            <td>@eventItem.GroupName</td>
                                            <td>@eventItem.Date</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a href="@Url.Action("Details", "Event", new { id = eventItem.Id })"
                                                       class="btn btn-info btn-sm text-white me-2">
                                                        <i class="fas fa-info-circle"></i> Details
                                                    </a>
                                                    <form asp-action="Join" asp-route-id="@eventItem.Id" method="post">
                                                        <button type="submit" class="btn btn-success btn-sm">
                                                            <i class="fas fa-user-plus"></i> Join
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                            <div class="alert alert-info text-center" role="alert">
                                <p class="mb-0">
                                    <i class="fas fa-info-circle fa-lg me-2"></i>No events available. Create a new event to get started.
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
