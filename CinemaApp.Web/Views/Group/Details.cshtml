@using CinemaApp.Web.ViewModels.Group
@model GroupDetailsViewModel

@{
    ViewData["Title"] = "Group Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #fbc2eb, #a6c1ee);
            color: #333;
            text-align: center;
        }

        .container {
            padding: 50px 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
        }

        .card {
            margin: 20px 0;
            border: none;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background: #6a11cb;
            background: linear-gradient(to right, #2575fc, #6a11cb);
            color: #fff;
            padding: 15px;
            text-align: left;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-body {
            padding: 20px;
        }

        dl {
            text-align: left;
        }

        dt {
            font-weight: bold;
            color: #2c3e50;
        }

        dd {
            margin: 0 0 15px 0;
            color: #555;
        }

        .btn {
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
        }

        .btn-secondary {
            background-color: #95a5a6;
            color: #fff;
        }

            .btn-secondary:hover {
                background-color: #7f8c8d;
            }

        .btn-primary {
            background-color: #3498db;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #2980b9;
            }

        .btn-danger {
            background-color: #e74c3c;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #c0392b;
            }

        .events-box {
            margin-top: 30px;
            padding: 20px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 10px;
            text-align: left;
        }

        .event-item {
            margin-bottom: 15px;
        }

        .event-title {
            font-size: 1.2rem;
            color: #2c3e50;
        }

        .event-date {
            color: #555;
        }

        .btn-add-event {
            padding: 10px 15px;
            font-size: 1rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin: 10px 0;
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            color: #fff;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .btn-add-event:hover {
            background: linear-gradient(to right, #feb47b, #ff7e5f);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                Group Details
            </div>
            <div class="card-body">
                <dl class="row">
                    <div class="mb-3">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                    </div>
                    <div class="mb-3">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </div>
                    <div class="mb-3">
                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.Location</dd>
                    </div>
                    <div class="mb-3">
                        <dt class="col-sm-4">Created Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate</dd>
                    </div>
                    <div class="mb-3">
                        <dt class="col-sm-4">Members Count:</dt>
                        <dd class="col-sm-8">@Model.MembersCount</dd>
                    </div>
                </dl>
                <div class="d-grid gap-2 mt-4">
                    <a href="@Url.Action("Index", "Group")" class="btn btn-secondary">
                        Go to Groups
                    </a>
                    @if (Model.IsFollowing)
                    {
                        @if (Model.AdminId == Model.UserId)
                        {
                            <a asp-controller="Group" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                Delete
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Group" asp-action="Unfollow" asp-route-id="@Model.Id" class="btn btn-danger">
                                Unfollow Group
                            </a>
                        }

                <div class="events-box">
                    <h3>Group Events</h3>

                    <a asp-controller="Event" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-add-event">
                        Add Event
                    </a>

                    @if (Model.Events.Any())
                    {
                        @foreach (var eventItem in Model.Events)
                        {
                            <div class="event-item">
                                <h4 class="event-title">@eventItem.Title</h4>
                                <p><strong>Date:</strong> @eventItem.Date</p>
                                <p><strong>Group Name:</strong> @eventItem.GroupName</p>
                                <p><strong>Joined Users:</strong> @eventItem.JoinedUsers</p>

                                <div class="d-flex gap-2">
                                    <!-- Details Button -->
                                    <a asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-primary">
                                        Details
                                    </a>

                                    <!-- Change Button -->                                    
                                    @if (eventItem.AdminId == Model.UserId)
                                    {
                                        <a asp-controller="Event" asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-secondary">
                                            Change
                                        </a>
                                    }
                                    
                                    <!-- Join Button -->
                                    <a asp-controller="Event" asp-action="Join" asp-route-id="@eventItem.Id" class="btn btn-success">
                                        Join Event
                                    </a>
                                </div>
                            </div>
                            <hr />
                        }
                    }
                    else
                    {
                        <p>No events available for this group.</p>
                    }
                </div>
                    }
                    else
                    {
                        <a asp-controller="Group" asp-action="Follow" asp-route-id="@Model.Id" class="btn btn-primary">
                            Follow Group
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
