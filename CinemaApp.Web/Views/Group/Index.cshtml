@using CinemaApp.Web.ViewModels.Group;
@model IEnumerable<GroupIndexViewModel>

@{
    ViewData["Title"] = "Groups";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #fbc2eb, #a6c1ee);
            color: #333;
            text-align: center;
        }

        .container {
            padding: 50px 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 1000px;
            margin: auto;
        }

        .card {
            margin: 20px 0;
            border: none;
            border-radius: 10px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background: #6a11cb;
            background: linear-gradient(to right, #2575fc, #6a11cb);
            color: #fff;
            padding: 15px;
            text-align: left;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-body {
            padding: 20px;
        }

        .table {
            width: 100%;
            margin: auto;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 10px;
                text-align: left;
            }

            .table th {
                background-color: #f1f1f1;
                font-weight: bold;
            }

        .table-hover tbody tr:hover {
            background-color: #f9f9f9;
        }

        .btn {
            padding: 5px 10px;
            font-size: 0.9rem;
            border-radius: 5px;
            text-decoration: none;
        }

        .btn-info {
            background-color: #3498db;
            color: #fff;
        }

            .btn-info:hover {
                background-color: #2980b9;
            }

        .alert {
            padding: 15px;
            background-color: #e3f2fd;
            border-left: 5px solid #2196f3;
            text-align: left;
            font-style: italic;
        }

        .mb-4 {
            padding: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                Groups
            </div>

            <form asp-action="Index" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text"
                           name="searchQuery"
                           class="form-control"
                           placeholder="Search by title..."
                           value="@ViewData["SearchQuery"]" />
                    <button type="submit" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </form>

            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Location</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var group in Model)
                                {
                                    <tr>
                                        <td>@group.Name</td>
                                        <td>@group.Description</td>
                                        <td>@group.Location</td>
                                        <td>@group.CreatedDate</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Group", new { id = group.Id })" class="btn btn-info">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert">
                        <p>No groups available. Create a new group to get started.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
