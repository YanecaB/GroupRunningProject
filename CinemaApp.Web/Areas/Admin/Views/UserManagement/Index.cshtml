@using CinemaApp.Web.ViewModels.User;
@model IEnumerable<UserManagementViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, #fbc2eb, #a6c1ee);
            color: #333;
            text-align: center;
        }

        .container {
            padding: 50px 20px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 10px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: auto;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table th, table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        table th {
            background-color: #3498db;
            color: white;
        }

        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table tr:hover {
            background-color: #ddd;
        }

        .action {
            text-align: right;
        }

        .ban-button {
            display: inline-block;
            text-decoration: none;
            background-color: #e74c3c;
            color: #fff;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

        .ban-button:hover {
            background-color: #c0392b;
        }

        .unban-button {
            background-color: #2ecc71;
            color: #fff;
        }

        .unban-button:hover {
            background-color: #27ae60;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>User Management</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th class="action">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td class="action">

                            @if (user.IsBanned)
                            {
                                <form asp-action="Unban" asp-controller="UserManagement" method="post" style="margin: 0;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="unban-button">Unban</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Ban" asp-controller="UserManagement" method="post" style="margin: 0;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="ban-button">Ban</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
